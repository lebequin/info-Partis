<Window x:Class="InterPol.UserControls.AjoutParti"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InterPol.UserControls"
             mc:Ignorable="d" 
             Height="250" Width="400">
    <Grid>
       
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox Text="Nom du Parti" VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="nomP"/>
        <TextBox Text="Representant" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1" x:Name="representant"/>
        <TextBox Text="Description" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="2" x:Name="desc"/>
        <TextBox Text="Biographie" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="3" x:Name="bio"/>

        <Button Content="Valider" Grid.ColumnSpan="2" Grid.Row="4" Height="40" Width="100" Background="DarkSalmon" Click="Button_Click"/>
    </Grid>
</Window>
